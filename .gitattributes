# Set file permissions for executable Python scripts
app.py export-ignore eol=lf text
test_app.py export-ignore eol=lf text

# Make sure these files have proper line endings
*.py text eol=lf
*.sh text eol=lf
Dockerfile text eol=lf
requirements.txt text eol=lf

# Binary files
*.pyc binary
*.pyo binary
*.db binary

# Git LFS for large files
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
