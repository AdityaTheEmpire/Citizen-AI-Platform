# Activity 1.1: IBM Granite Model Configuration
# Citizen AI Platform - Environment Variables

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here
PORT=5000

# Activity 1.1: Watson AI/IBM Granite Configuration
WATSONX_API_ENDPOINT=https://api.dataplatform.cloud.ibm.com
WATSONX_API_PROJECT_ID=your-project-id
WATSONX_API_KEY=your-api-key

# Model Configuration
AI_MODEL_ID=ibm/granite-3-8b-instruct
MODEL_PARAMETERS={"max_tokens": 500, "temperature": 0.7}

# Activity 2.x: Database Configuration
DATABASE_URL=sqlite:///citizen_ai.db
DATABASE_ECHO=False

# Activity 3.x: Data Handling
DATA_STORAGE_TYPE=in-memory
MAX_CONVERSATION_HISTORY=1000

# Activity 4.x: Frontend Configuration
FRONTEND_PORT=3000
ALLOW_CORS=true
CORS_ORIGINS=*

# Activity 5.x: Testing Configuration
TEST_DATABASE_URL=sqlite:///:memory:
TEST_MODE=False

# Activity 6.x: Deployment Configuration
DEPLOYMENT_ENV=local
LOG_LEVEL=INFO
MONITORING_ENABLED=true
